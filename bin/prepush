#!/usr/bin/env ruby

require "pre_push"
require "fileutils"
#puts ARGV[0]

puts "Couldn't find a git repository" if !Dir.exists?('.git')
puts "Couldn't find the git hooks dir" if !Dir.exists?('.git/hooks')
dest = File.dirname(__FILE__)
FileUtils.cp("#{dest}/pre-push", ".git/hooks")
